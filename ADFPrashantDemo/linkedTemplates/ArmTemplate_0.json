					"RootPath": {
						"type": "string",
						"defaultValue": " adfdemo/CopyData"
					},
					"FileName": {
						"type": "string",
						"defaultValue": "dbo_tblEmployee.csv"
					}
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/DelimitedText2')]",
				"[concat(variables('factoryId'), '/datasets/DelimitedText3')]"
			]
		}
	]
